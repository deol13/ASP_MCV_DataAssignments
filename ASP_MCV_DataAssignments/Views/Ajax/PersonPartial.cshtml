@model ASP_MCV_DataAssignments.Models.Person

@if (User.IsInRole("Admin") || User.IsInRole("User"))
{
<div class="row">
    <div class="col-sm">
        @Html.DisplayFor(model => model.Id)
    </div>
    <div class="col-sm">
        @Html.DisplayFor(model => model.Name)
    </div>
    <div class="col-sm">
        @Html.DisplayFor(model => model.Phone)
    </div>
    <div class="col-sm">
        @Html.DisplayFor(model => model.City.Name)
    </div>
    <div>
        <select>
            @foreach (KnownLanguage item in Model.KnownLanguageList)
            {
                <option>@item.Language.Name</option>
            }
        </select>
    </div>
    <div class="col-sm">
        @Html.ActionLink("Delete", "Remove", "People", new { Model.Id }, null)
    </div>
    <div class="col-sm">
        @Html.ActionLink("Edit", "Edit", "People", new { Model.Id }, null)
    </div>
</div>
}