@model CreateLanguageViewModel
@{
    ViewData["Title"] = "Create Language";
}

<h4>Create Language</h4>

@if (User.IsInRole("Admin"))
{
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <select asp-for="PeopleIds" asp-items="@Model.PeopleSelectList" class="form-control" multiple></select>
                    <span asp-validation-for="PersonString" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
}