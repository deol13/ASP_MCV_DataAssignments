@model LanguagesViewModel
@{
    ViewData["Title"] = "Language Index";
}

<h4>View Languages</h4>

@if (User.IsInRole("Admin"))
{
    <a asp-action="Create">Create</a>

    <form asp-action="Index" method="post">
        <label asp-for="FilterText"></label>
        <input asp-for="FilterText" />
    </form>

    @foreach (var item in Model.LanguageList)
    {
        <div class="row">
            <div class="col-sm">
                @item.Name
            </div>
            <div class="col-sm">
                <select>
                    @foreach (KnownLanguage knownLanguage in item.KnownLanguageList)
                    {
                        <option>@knownLanguage.Person.Name</option>
                    }
                </select>
            </div>
            <div class="col-sm">
                @Html.ActionLink("Delete", "Remove", "Language", new { id = item.LanguageId }, null)
            </div>
            <div class="col-sm">
                @Html.ActionLink("Edit", "Edit", "Language", new { id = item.LanguageId }, null)
            </div>
        </div>
    }
}